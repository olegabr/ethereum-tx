{
    "name": "web3p/ethereum-tx",
    "description": "Ethereum transaction library in PHP.",
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name": "sc0Vu",
            "email": "alk03073135@gmail.com"
        }
    ],
    "config": {
        "fxp-asset": {
            "vcs-driver-options": {
                "github-no-api": true
            }
        }
    },
    "require-dev": {
        "phpunit/phpunit": "5.7.27|^6.1"
    },
    "autoload": {
        "psr-4": {
            "Web3p\\EthereumTx\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Test\\": "test/"
        }
    },
    "repositories": [
       {
          "type": "vcs",
          "url": "https://github.com/olegabr/php-keccak"
       },
       {
          "type": "vcs",
          "url": "https://github.com/olegabr/ethereum-util"
       }
    ],
    "require": {
	"PHP": ">=5.6",
        "web3p/rlp": "~0.2.1",
        "olegabr/ethereum-util": "~0.1",
        "olegabr/keccak": "~1",
        "simplito/elliptic-php": "1.0.3"
    }
}
